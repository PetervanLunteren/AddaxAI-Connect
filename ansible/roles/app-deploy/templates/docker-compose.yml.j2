services:
  # PostgreSQL Database with PostGIS
  postgres:
    image: postgis/postgis:15-3.3
    container_name: addaxai-postgres
    restart: unless-stopped
    environment:
      POSTGRES_USER: ${POSTGRES_USER}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD}
      POSTGRES_DB: ${POSTGRES_DB}
    volumes:
      - ./data/postgres:/var/lib/postgresql/data
    # Port binding removed for security - only accessible within Docker network
    # Application containers access via postgres:5432
    # For direct access: docker exec -it addaxai-postgres psql -U ${POSTGRES_USER}
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${POSTGRES_USER} -d ${POSTGRES_DB}"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - addaxai-network

  # Redis Message Queue
  redis:
    image: redis:7-alpine
    container_name: addaxai-redis
    restart: unless-stopped
    command: redis-server --appendonly yes --requirepass ${REDIS_PASSWORD}
    volumes:
      - ./data/redis:/data
    # Port binding removed for security - only accessible within Docker network
    # External connections blocked; containers access via redis://redis:6379
    healthcheck:
      test: ["CMD", "redis-cli", "-a", "${REDIS_PASSWORD}", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - addaxai-network

  # MinIO Object Storage
  minio:
    image: minio/minio:latest
    container_name: addaxai-minio
    restart: unless-stopped
    command: server /data --console-address ":9001"
    environment:
      MINIO_ROOT_USER: ${MINIO_ROOT_USER}
      MINIO_ROOT_PASSWORD: ${MINIO_ROOT_PASSWORD}
    volumes:
      - ./data/minio:/data
    # Port bindings removed for security - only accessible within Docker network
    # S3 API: Application containers access via minio:9000
    # Console: Access via nginx proxy at https://yourdomain.com/minio-console/
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:9000/minio/health/live"]
      interval: 30s
      timeout: 20s
      retries: 3
    networks:
      - addaxai-network

  # MinIO Bucket Initialization
  minio-init:
    image: minio/mc:latest
    container_name: addaxai-minio-init
    depends_on:
      - minio
    entrypoint: >
      /bin/sh -c "
      sleep 10;
      /usr/bin/mc alias set minio http://minio:9000 ${MINIO_ROOT_USER} ${MINIO_ROOT_PASSWORD};
      /usr/bin/mc mb --ignore-existing minio/raw-images;
      /usr/bin/mc mb --ignore-existing minio/crops;
      /usr/bin/mc mb --ignore-existing minio/thumbnails;
      /usr/bin/mc mb --ignore-existing minio/models;
      echo 'MinIO buckets created successfully';
      "
    networks:
      - addaxai-network

  # Prometheus Monitoring
  prometheus:
    image: prom/prometheus:latest
    container_name: addaxai-prometheus
    restart: unless-stopped
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'
      - '--storage.tsdb.path=/prometheus'
      - '--storage.tsdb.retention.time=15d'
    volumes:
      - ./monitoring/prometheus.yml:/etc/prometheus/prometheus.yml:ro
      - ./data/prometheus:/prometheus
    # Port binding removed for security - only accessible within Docker network
    # Access via nginx proxy at https://yourdomain.com/prometheus/ (password protected)
    networks:
      - addaxai-network

  # Loki Log Aggregation
  loki:
    image: grafana/loki:latest
    container_name: addaxai-loki
    restart: unless-stopped
    command: -config.file=/etc/loki/loki-config.yml
    volumes:
      - ./monitoring/loki-config.yml:/etc/loki/loki-config.yml:ro
      - ./data/loki:/loki
    # Port binding removed for security - only accessible within Docker network
    # Access via nginx proxy at https://yourdomain.com/loki/ (password protected)
    networks:
      - addaxai-network

  # Promtail Log Collector
  promtail:
    image: grafana/promtail:latest
    container_name: addaxai-promtail
    restart: unless-stopped
    command: -config.file=/etc/promtail/promtail-config.yml
    volumes:
      - ./monitoring/promtail-config.yml:/etc/promtail/promtail-config.yml:ro
      - /var/lib/docker/containers:/var/lib/docker/containers:ro
      - ./logs:/logs:ro
    networks:
      - addaxai-network

