[Unit]
Description=Pure-FTPd upload script handler
Documentation=man:pure-uploadscript(8)
After=pure-ftpd.service
Requires=pure-ftpd.service

[Service]
Type=simple
ExecStart=/usr/sbin/pure-uploadscript -u {{ ftps_username | default('camera') }} -g {{ ftps_username | default('camera') }} -r /usr/local/bin/ftps-rename-uploads.sh
Restart=always
RestartSec=5

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths={{ ftps_upload_dir | default('/opt/addaxai-connect/uploads') }}

[Install]
WantedBy=multi-user.target
